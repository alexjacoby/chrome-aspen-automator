{
    "manifest_version": 2,

    "name": "Aspen Automator",
    "description": "This extension automates annoying parts of aspen",
    "version": "1.0",

    // "applications" : {
    // 	"gecko" : {
    // 	    "id" : "aspen-automator"
    // 	}},

    "browser_action": {
	"default_icon": "icon.png",
	"default_popup": "popup.html"
    },
    "permissions": [
	"activeTab",
	"https://ajax.googleapis.com/"
    ],

    "content_scripts" : [
	{"matches":["https://*.myfollett.com/*"],
	 "css":["aspen.css"],
	 "js":["jquery.js","jquery.csv.min.js","globals.js", "delayedDoer.js","aspen.js"],
	 "all_frames":true
	}
    ],

    "background" : {"scripts" : ["globals.js","background.js"]
	 //"page":"background.html"
	 //,"persistent":false
	}
    
}
